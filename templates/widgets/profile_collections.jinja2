<div class="row">
    <div class="col-xs-12">
        <h2>Your collections</h2>
    </div>
</div>
{% for collection in collections %}
    <div class="collection-row row text-center">
        <div class="col-xs-12 col-md-2 col-md-offset-3">
            <button type="button" class="btn btn-secondary edit-collection-btn" data-id="{{ collection['id'] }}" data-name="{{ collection['name'] }}" data-toggle="modal" data-target="#collection-modal">Edit</button>
        </div>
        <div class="col-xs-12 col-md-2">
            {{ collection['name'] }}
        </div>
        {% if collections|length != 1 %}
            <div class="col-xs-12 col-md-2">
                <button type="button" class="btn btn-danger delete-collection-btn" data-id="{{ collection['id'] }}" data-name="{{ collection['name'] }}" data-toggle="modal" data-target="#delete-modal">Delete</button>
            </div>
        {% endif %}
    </div>
{% endfor %}
<div class="row collection-row">
    <div class="col-xs-12 text-center">
        <button type="button" class="btn btn-secondary" id="add-collection-btn" data-toggle="modal" data-target="#collection-modal">Add new collection</button>
    </div>
</div>